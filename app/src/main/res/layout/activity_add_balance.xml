<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFD0CC"
    tools:context=".addBalance">

    <EditText
        android:id="@+id/txt_addBalance"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:inputType="number"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_addBalance"
        android:layout_marginTop="200dp"
        android:background="#DFD0CC"
        android:id="@+id/btn_addBalance"
        android:src="@drawable/baseline_account_balance_wallet_24"/>
    <ImageButton
        android:layout_width="100dp"
        android:id="@+id/btn_backBalance"
        android:layout_height="wrap_content"
        android:background="#DFD0CC"
        android:src="@drawable/baseline_arrow_back_24"/>

</RelativeLayout>